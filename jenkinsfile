/// This is my second jenkins file for script stage 

pipeline {
    agent
     label 'java-node-slave'
      stages {
               stage ('Build stage'){
                steps {
             echo '** This is the stage for building Maven app **'
                }
               }
               stage ('Scripted stage')
                steps {
             echo '****** Excusting script stage ******'
                       // Write some custome groovy code
                 script {
                 def course = "k8's"
                 if (course == "k8's") {
                   printlin ("Thanks for enrolling into $course")
                   }
                     else
                      println ("Do learn k8's")

    }
}        

}

      }
